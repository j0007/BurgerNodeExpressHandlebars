<h1>Burgerrrr</h1>
<h2>Your orders</h2>
<div class="burgers-ordered">
    <ul>
        {{#each burgers}} {{#unless devoured}}
        <li>
            {{burger_name}} &nbsp;&nbsp;
            <button class="devour" data-id="{{id}}" data-devour="true">
                {{#if devoured}}Order Again{{else}}Devour{{/if}}
            </button>
        </li>
        {{/unless}} {{/each}}
    </ul>
</div>
<h2>EATEN</h2>
<div class="burgers-eaten">
    <ul>
        {{#each burgers}} {{#if devoured}}
        <li>
            {{burger_name}} &nbsp;&nbsp;

            <button class="devour" data-id="{{id}}" data-devour="false">
                {{#if devoured}}Order Again{{else}}Devour &nbsp;&nbsp;
                <button class="delete-all" data-id="{{this.id}}">DELETE!</button>{{/if}}

            </button>
        </li>
        {{/if}} {{/each}}
    </ul>
</div>

<h2>Order a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger:</label>
        <input type="text" id="ca" name="name">
        <button type="submit" class="submit-button">Submit</button>
    </div>

    
</form>